{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.29/schema.json",
    "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.yaml",
    "window_hiding_behaviour": "Cloak",
    "cross_monitor_move_behaviour": "Insert",
    "default_workspace_padding": 1,
    "default_container_padding": 1,
    "border": true,
    "border_implementation": "Komorebi",
    "border_width": 8,
    "border_offset": -1,
    "animation": {
        "enabled": true,
        "fps": 200,
        "duration": 200
    },
    "theme": {
        "palette": "Catppuccin",
        "name": "Macchiato",
        "stack_border": "Sky",
        "unfocused_border": "Surface0",
        "single_border": "Pink",
        "monocle_border": "Maroon",
        "stackbar_focused_text": "Sky"
    },
    "stackbar": {
        "label": "Title",
        "height": 30,
        "mode": "OnStack",
        "tabs": {
            "font_family": "FiraCode Nerd Font Propo",
            "font_size": 14,
            "width": 250
        }
    },
    "monitors": [
        {
            "workspaces": [
                {
                    "name": "I",
                    "layout": "BSP"
                },
                {
                    "name": "II",
                    "layout": "VerticalStack"
                },
                {
                    "name": "III",
                    "layout": "HorizontalStack"
                },
                {
                    "name": "IV",
                    "layout": "UltrawideVerticalStack"
                },
                {
                    "name": "V",
                    "layout": "Rows"
                },
                {
                    "name": "VI",
                    "layout": "Grid"
                },
                {
                    "name": "VII",
                    "layout": "RightMainVerticalStack"
                }
            ]
        }
    ]
}
