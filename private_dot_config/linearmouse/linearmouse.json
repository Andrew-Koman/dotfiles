{
  "$schema" : "https:\/\/schema.linearmouse.app\/0.10.0",
  "schemes" : [
    {
      "buttons" : {
        "universalBackForward" : true
      },
      "scrolling" : {
        "speed" : {
          "vertical" : 0
        },
        "modifiers" : {
          "vertical" : {
            "command" : {
              "type" : "preventDefault"
            },
            "control" : {
              "type" : "changeSpeed",
              "scale" : 3
            }
          }
        },
        "distance" : {
          "vertical" : "auto"
        },
        "acceleration" : {
          "vertical" : 1
        }
      },
      "if" : {
        "device" : {
          "category" : "trackpad",
          "productName" : "Apple Internal Keyboard \/ Trackpad",
          "vendorID" : "0x0",
          "productID" : "0x0"
        }
      },
      "pointer" : {
        "acceleration" : 0.6875,
        "speed" : 0.0689655172413792768,
        "disableAcceleration" : true
      }
    }
  ]
}