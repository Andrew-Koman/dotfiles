gui:
  authorColors:
    '*svc*': '#cad3f5'
    'Andrew Koman': '#7dc4e4'
{{ if .work }}    'Matt Hunter': '#eed49f'{{ end }}

  branchColors:
    'bugfix': '#f5a97f'
    'feature': '#ee99a0'
    'release': '#a6da95'
    'master': '#c6a0f6'
    'main': '#c6a0f6'
{{ if .work }}    'bugfix-n5': '#eed49f'
    'feature-n5': '#ed8796'{{ end }}
  nerdFontsVersion: 3
  scrollOffMargin: 4
  scrollOffBehavior: margin
  expandFocusedSidePanel: true

services:
{{ if .work }}    'bitbucket.wdc.com': 'bitbucketServer:bitbucket.wdc.com'
{{ else }}    'github.com': 'github:gitservicework.com'{{ end }}
git:
  paging:
    parseEmoji: true
    {{- if eq .chezmoi.os "windows" }}
    externalDiffCommand: difft --color=always --display=inline
    {{- else }}
    colorArg: always
    pager: "delta --paging=never"
{{ if .work }}    branchPrefix: "koman/"{{ end }}
    {{- end -}}
os:
  editPreset: 'nvim'

# to skip without creating a new repo
confirmOnQuit: true
