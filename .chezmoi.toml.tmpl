{{ $email := promptString "email" -}}

[cd]
{{ if eq .chezmoi.os "windows" }}
    command = "C:\\Program Files\\PowerShell\\7\\pwsh.exe"
{{ end }}

[data]
    email = {{ $email | quote }}

[keepassxc]
    database = "{{ .chezmoi.homeDir }}/Documents/Keyboards.kdbx"
    args = ["--key-file", "{{ .chezmoi.homeDir }}/.mspaint.key"]
